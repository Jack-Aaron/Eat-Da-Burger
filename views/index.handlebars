<h1>Eat Da Burger!</h1>

<h2>Burgers You Can Eat!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{this.id}} - {{this.burger_name}}
  <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
    DEVOUR
  </button>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers That Have Been Devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{this.id}} - {{this.burger_name}}
  <button type="button" class="devoured-burger btn btn-danger" id="devoured-button" data-id="{{this.id}}"
    data-newdevoured="{{devour}}"><span class="fa fa-trash"></span></button>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready To Be Devoured!
  </div>

  <button type="submit">Add Burger</button>
</form>